format_version: 10
pipelines:
  graphql-springboot-trigger:
    group: graphql-springboot
    label_template: ${COUNT}
    lock_behavior: unlockWhenFinished
    display_order: -1
    materials:
      graphql-springboot:
        scm: 387b2a38-2bd7-45c5-8238-27a9afc81ba0
    stages:
    - build:
        fetch_materials: true
        keep_artifacts: false
        clean_workspace: false
        approval:
          type: success
          allow_only_on_success: false
        jobs:
          compile:
            timeout: 0
            resources:
            - maven
            tasks:
            - exec:
                arguments:
                - -lha
                command: ls
                run_if: passed
            - exec:
                arguments:
                - clean
                - package
                - -DskipTests
                command: mvn
                run_if: passed
    - build-docker:
        fetch_materials: false
        keep_artifacts: false
        clean_workspace: false
        approval:
          type: success
          allow_only_on_success: true
        jobs:
          build-image:
            timeout: 0
            resources:
            - docker
            tasks:
            - exec:
                arguments:
                - -lha
                command: ls
                run_if: passed
            - exec:
                arguments:
                - -c
                - docker build -t $GO_PIPELINE_NAME:$GO_PIPELINE_LABEL .
                command: sh
                run_if: passed
